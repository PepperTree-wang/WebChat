  <!-- 插入一条新的聊天记录 -->
  <insert id="saveChat" parameterType="com.wanmait.webchat.vo.Chat" >
    insert into chat (host,friend,content) values (#{host.id} ,#{friend.id},#{content} )
  </insert>

  <!-- 根据用户ID，好友ID，发送信息，获取chatID最大的Chat对象
        主要用来获取新插入的消息的时间-->
  <select id="getChatTime" parameterType="com.wanmait.webchat.vo.Chat" resultMap="BaseResultMap" >
    select * from chat where host=#{host.id} and friend=#{friend.id}  and content=#{content} and enable = true
    order by id desc limit 1
  </select>

  <!--获取登录的用户的近15条最近聊天的好友-->
  <!--查询出来的好友信息，默认为好友-->
  <select id="getRecentChats" resultMap="BaseResultMap" parameterType="com.wanmait.webchat.vo.User">
      WITH temp AS (SELECT MAX(id) AS id,friend AS tid FROM chat WHERE HOST=#{id} AND ENABLE=1 group BY friend
      union SELECT MAX(id) AS id,HOST AS tid FROM chat WHERE friend=#{id} AND ENABLE=1 group BY HOST)
      SELECT * FROM chat
      WHERE id IN (SELECT MAX(id) FROM temp group BY tid)
      ORDER BY TIME desc
  </select>

  <!-- 获取和当前好友的最近15条聊天记录 -->
  <select id="getChatsWithFriend" resultMap="BaseResultMap">
    WITH temp as
    (
        SELECT * FROM chat
        WHERE (HOST = #{host.id} OR friend =#{host.id})AND
              ( HOST =#{friend.id} OR friend = #{friend.id} )
          AND ( ENABLE = 1 )
        ORDER BY TIME DESC LIMIT 0,15
    )
    SELECT * FROM temp ORDER BY time
  </select>

  <!-- ajax 查询最新消息
      关联查询host 和friend-->
  <select id="getNewChats" resultMap="BaseResultMap" parameterType="com.wanmait.webchat.vo.Chat">
    select * from chat
        join (select id ,nickname,profile from user ) u
             on u.id = host
        join (select id,nickname as friend_nickname,profile as friend_profile from user) f
             on  f.id=friend
    where chat.id > #{id} and enable=1
      and ((host = #{host.id} or friend = #{host.id}) and (host = #{friend.id} or friend = #{friend.id}))
    order by chat.id desc
  </select>





